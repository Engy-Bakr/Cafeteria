<%include  ../layout/header.ejs %>
<h1>Category List</h1>
<% if(!msg){ %>
    <h3 class="alert alert-success"><%= msg %></h3>
    <% }%>
<table class="table table-bordered">
    <tr>    
        <th>
            Title
        </th>
        <th>Action</th>
    </tr>
    <% data.forEach(function(category){ %>
        <tr>
            <td>
                <%= category.name %>
            </td>
            <td><a class="btn btn-danger" href="/category/delete/<%= category._id %>">Delete</a>
            <a class="btn btn-primary" href="/category/edit/<%= category._id %>">Edit</a></td>            
        </tr>
        <% }) %>
</table>
<%include  ../layout/footer.ejs %>
